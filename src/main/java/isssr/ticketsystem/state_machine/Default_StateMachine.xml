<?xml version="1.0" encoding="UTF-8"?>

<FSM>
	<STATE id="NEW">
		<MESSAGE id="TicketCreation" action="creation" nextState="VALIDATION"/>
	</STATE>
	<STATE id="VALIDATION">
		<MESSAGE id="TicketInvalidated" action="TicketInvalidated" nextState="NEW"/>
		<MESSAGE id="assignToTeamLeader" action="assignToTeamLeader" nextState="PENDING"/>
		<MESSAGE id="TicketFalse" action="TicketFalse" nextState="DISCARDED"/>
	</STATE>
	<STATE id="DISCARDED">
		<MESSAGE id="TicketRestore" action="restore" nextState="PENDING"/>
	</STATE>
	<STATE id="PENDING">
		<MESSAGE id="TeamLeaderWrongAssignment" action="TeamLeaderWrongAssignment" nextState="VALIDATION"/>
		<MESSAGE id="assignTeamMemberLowPriority" action="assignTeamMemberLowPriority" nextState="READY"/>
		<MESSAGE id="assignTeamMemberHighPriority" action="assignTeamMemberHighPriority" nextState="EXECUTION"/>
	</STATE>
	<STATE id="READY">
		<MESSAGE id="TicketReadyToWork" action="readyToWork" nextState="EXECUTION"/>
	</STATE>
	<STATE id="EXECUTION">
		<MESSAGE id="TeamMemberWrongAssignment" action="TeamMemberWrongAssignment" nextState="PENDING"/>
		<MESSAGE id="TicketCloseByTeamMember" action="close" nextState="CLOSED"/>
		<MESSAGE id="TicketResolve" action="TicketResolve" nextState="RESOLVED"/>
		<MESSAGE id="TicketStopExecution" action="stopExecution" nextState="PAUSED"/>
	</STATE>
	<STATE id="PAUSED">
		<MESSAGE id="TicketRestoreWork" action="TicketrestoreWork" nextState="EXECUTION"/>
	</STATE>
	<STATE id="RESOLVED">
		<MESSAGE id="TicketNoResolved" action="NoResolved" nextState="PENDING"/>
		<MESSAGE id="TicketCloseByCustomer" action="closeByCustomer" nextState="CLOSED"/>
	</STATE>
	<STATE id="CLOSED">
	</STATE>
</FSM>