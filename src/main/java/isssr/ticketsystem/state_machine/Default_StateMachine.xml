<?xml version="1.0" encoding="UTF-8"?>

<FSM>
	<STATE id="VALIDATION">
		<MESSAGE id="TicketEdited" action="TicketEdited" nextState="EDIT"/>
		<MESSAGE id="assignToTeamLeader" action="assignToTeamLeader" nextState="PENDING"/>
		<MESSAGE id="TicketFalse" action="TicketFalse" nextState="DISCARDED"/>
	</STATE>
	<STATE id="EDIT">
		<MESSAGE id="TicketModified" action="TicketModified" nextState="VALIDATION"/>
		<MESSAGE id="TicketDelete" action="TicketDelete" nextState="DISCARDED"/>
	</STATE>
	<STATE id="DISCARDED">
		<MESSAGE id="TicketRestoredByTeamCoordinator" action="TicketRestoredByTeamCoordinator" nextState="VALIDATION"/>
        <MESSAGE id="TicketRestoredByCustomer" action="TicketRestoredByCustomer" nextState="EDIT"/>
    </STATE>
	<STATE id="PENDING">
		<MESSAGE id="TeamLeaderWrongAssignment" action="TeamLeaderWrongAssignment" nextState="VALIDATION"/>
		<MESSAGE id="assignTeamMember" action="assignTeamMember" nextState="EXECUTION"/>
	</STATE>
    <STATE id="EXECUTION">
		<MESSAGE id="TeamMemberWrongAssignment" action="TeamMemberWrongAssignment" nextState="PENDING"/>
		<MESSAGE id="TicketClosedByTeamMember" action="TicketClosedByTeamMember" nextState="CLOSED"/>
		<MESSAGE id="TicketResolved" action="TicketResolved" nextState="RESOLVED"/>
	</STATE>
    <STATE id="RESOLVED">
		<MESSAGE id="TicketNotResolved" action="TicketNotResolved" nextState="PENDING"/>
		<MESSAGE id="TicketClosedByCustomer" action="TicketClosedByCustomer" nextState="CLOSED"/>
	</STATE>
	<STATE id="CLOSED">
	</STATE>
</FSM>